#WORKING
alias .='cd .'
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias cls='clear'
alias ls='ls -F --color=auto --show-control-chars'
alias ll='ls -lash'
alias lls='ls -la --sort=size'
alias llt='ls -la --sort=time'
alias rm='rm -iv'
alias cll='clear; ls -lah'
alias cfs='ls -1 | wc -l'
alias work='cd ~/Documents/Workspace'
alias work2='cd ~/Documents/Worksfolder'

#NPM
alias ni='npm i'
alias nls='npm list'
alias nun='npm uninstall'
alias nst='browser=none npm start'

#WSL
alias wslr='wsl --list --running'
alias wsloff='wsl -t'

#Scoop
alias scs='scoop search'
alias scu='scoop update'
alias sci='scoop install'
alias scun='scoop uninstall'
alias scl='scoop list'
alias scd='scoop details'

#GIT
#EverythingElse
alias g='git'
alias gi='git init'
alias gap='git apply'
alias gbl='git blame -b -w'
alias gcf='git config --list'
alias gcl='git clone'
alias gclean='git clean -di'
alias gclean!='git clean -dfx'
alias gclean!!='git reset --hard; and git clean -dfx'
alias gcp='git cherry-pick'
alias gcpa='git cherry-pick --abort'
alias gcpc='git cherry-pick --continue'
alias gignore='git update-index --assume-unchanged'
alias gf='git fetch'
alias gfa='git fetch --all --prune'
alias gfm='git fetch origin master --prune; and git merge FETCH_HEAD'
alias gfo='git fetch origin'
alias gm='git merge'
alias gmt='git mergetool --no-prompt'
alias grev='git revert'
alias gr='git reset'
alias grh='git reset HEAD~'
alias grhh='git reset HEAD --hard'
alias gsh='git show'
alias gsd='git svn dcommit'
alias gsr='git svn rebase'
alias gss='git status -s'
alias gst='git status'
alias gsu='git submodule update'
alias gsur='git submodule update --recursive'
alias gsuri='git submodule update --recursive --init'
alias gsw='git switch'
alias gswc='git switch --create'
alias gunignore='git update-index --no-assume-unchanged'

#Local_File
alias ga='git add'
alias gaa='git add --all'
alias gapa='git add --patch'
alias grm='git rm'
alias grmc='git rm --cached'
alias grs='git restore'
alias grss='git restore --source'

#Checkout
alias gco='git checkout'
alias gcom='git checkout main'
alias gcob='git checkout -b'

#Commit
alias gc='git commit -v'
alias gc!='git commit -v --amend'
alias gcn!='git commit -v --no-edit --amend'
alias gca='git commit -v -a'
alias gca!='git commit -v -a --amend'
alias gcan!='git commit -v -a --no-edit --amend'
alias gcv='git commit -v --no-verify'
alias gcav='git commit -a -v --no-verify'
alias gcav!='git commit -a -v --no-verify --amend'
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias gscam='git commit -S -a -m'
alias gcfx='git commit --fixup'

#Log
alias gcount='git shortlog -sn'
alias glg='git log --graph --max-count=10'
alias gls='git log --stat --max-count=10'
alias glo='git log --oneline --decorate --color'
alias gwch='git whatchanged -p --abbrev-commit --pretty=medium'

#PushAndPull
alias gl='git pull'
alias gpc='git pull origin current-branch'
alias gup='git pull --rebase'
alias glr='git pull --rebase'
alias gp='git push'
alias gp!='git push --force-with-lease'
alias gpo='git push origin'
alias gpm='git push origin main'
alias gpv='git push --no-verify'
alias gpv!='git push --no-verify --force-with-lease'

#Remote
alias gra='git remote add origin'
alias grmv='git remote rename'
alias grrm='git remote remove'
alias grset='git remote set-url'
alias grup='git remote update'
alias grv='git remote -v'

#Branch
alias gbr='git branch'
alias gbra='git branch -a'
